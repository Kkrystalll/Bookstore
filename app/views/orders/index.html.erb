<h1>我的訂單</h1>
  <table>
  <tr>
    <td>書名</td>
    <td>價錢</td>
  </tr>
  <% @books.each do |book| %>
  <tr class="book_order">
    <td><%= book.title %></td>
    <td><%= book.price %></td>
    <td><button data-controller="order" data-action="click->order#remove_to_cart" data-book-id="<%= book.id %>" data-order-id="<%= @order.id %>">移除訂單</button></td> 
  </tr>
  
  <% end %>
  </table>


