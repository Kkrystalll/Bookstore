<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <section class="absolute top-80 left-1/2 mx-auto max-w-sm -translate-x-1/2 -translate-y-1/2 transform space-y-4 text-center">
    <div class="space-y-4">
      <header class="mb-3 text-2xl font-bold">Register | 註冊</header>
        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"信箱", 
            class:"my-3 w-full border-none bg-transparent outline-none focus:outline-none" %>
        </div>
        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"密碼(最少6碼)",
            class: "my-3 w-full border-none bg-transparent outline-none focus:outline-none" %>  
        </div>
        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"密碼驗證",
            class: "my-3 w-full border-none bg-transparent outline-none focus:outline-none" %>  
        </div>
    </div>
    <%= f.submit "註冊", class:"w-full rounded-2xl border-b-4 border-b-gray-600 bg-ironGray py-3 font-bold text-white hover:bg-ironGrayHover active:translate-y-[0.125rem] active:border-b-blue-400" %>
  </section>
<% end %>

